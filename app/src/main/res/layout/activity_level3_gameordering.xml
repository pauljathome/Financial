<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/background4"
    tools:context="com.myoralvillage.financialnumeracygames.Level3ActivityGameOrdering">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" >
        <ImageView
            android:id="@+id/score"
            android:src="@drawable/star0"
            android:layout_width="250dip"
            android:layout_height="60dip"
            android:layout_marginLeft="5dip"
            android:layout_alignParentLeft="true"/>

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/home"
            android:onClick="setHomeButton" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--this is to add some margin above the baskets-->
        <LinearLayout
            android:layout_width="40dip"
            android:layout_height="55dip"></LinearLayout>

        <LinearLayout
            android:layout_height="120dip"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/optionView0"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:text="optionView0"
                android:gravity="center"
                android:background="@drawable/basket_1"
                android:textColor="#B8A470"
                android:padding="10dp" />

            <!--margin between the baskets-->
            <LinearLayout
                android:layout_width="40dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/optionView1"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:text="optionView1"
                android:gravity="center"
                android:background="@drawable/basket_1"
                android:textColor="#B8A470"
                android:padding="10dp" />

            <!--margin between the baskets-->
            <LinearLayout
                android:layout_width="40dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/optionView2"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:text="optionView2"
                android:gravity="center"
                android:background="@drawable/basket_1"
                android:textColor="#B8A470"
                android:padding="10dp" />

            <!--margin between the baskets-->
            <LinearLayout
                android:layout_width="40dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/optionView3"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:text="optionView3"
                android:gravity="center"
                android:background="@drawable/basket_1"
                android:textColor="#B8A470"
                android:padding="10dp" />

        </LinearLayout>

        <!--margin between the baskets and bags-->
        <LinearLayout
            android:layout_height="30dip"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/sequenceView0"
                android:text="0"
                android:textSize="17sp"
                android:onClick="checkThisAnswer"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bag_mangoes"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="30dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/sequenceView1"
                android:text="0"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="17sp"
                android:background="@drawable/bag_mangoes"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="30dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/sequenceView2"
                android:text="0"
                android:textSize="17sp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bag_mangoes"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="30dip"
                android:layout_height="30dip"></LinearLayout>

            <TextView
                android:id="@+id/sequenceView3"
                android:text="0"
                android:textSize="17sp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/bag_mangoes"
                android:padding="10dp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
